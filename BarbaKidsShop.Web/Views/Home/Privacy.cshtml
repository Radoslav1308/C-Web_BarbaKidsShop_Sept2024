@{
    ViewData["Title"] = "Privacy Policy";
}

<div class="container py-5">
    <div class="text-center mb-5">
        <h1 class="text-primary fw-bold">@ViewData["Title"]</h1>
        <p class="text-muted fs-5">Your privacy is our priority. Learn how we handle your data.</p>
    </div>

    <!-- Card Section -->
    <div class="card shadow-lg border-0">
        <div class="card-body p-4">
            <!-- Information Collection -->
            <section class="mb-4">
                <h4 class="text-secondary fw-bold mb-3">
                    <i class="fas fa-info-circle me-2 text-primary"></i>What Information We Collect
                </h4>
                <p class="text-dark">
                    We collect information to provide better services. This includes:
                </p>
                <ul class="list-group list-group-flush mb-3">
                    <li class="list-group-item bg-light">Personal details like name and email when you create an account.</li>
                    <li class="list-group-item bg-light">Order details such as items purchased and delivery addresses.</li>
                    <li class="list-group-item bg-light">Browsing data to improve your shopping experience.</li>
                </ul>
            </section>

            <!-- Information Usage -->
            <section class="mb-4">
                <h4 class="text-secondary fw-bold mb-3">
                    <i class="fas fa-clipboard-list me-2 text-primary"></i>How We Use Your Information
                </h4>
                <p class="text-dark">Your information is used to:</p>
                <ul class="list-group list-group-flush mb-3">
                    <li class="list-group-item bg-light">Process your orders and deliver items.</li>
                    <li class="list-group-item bg-light">Send updates, special offers, and newsletters (if opted in).</li>
                    <li class="list-group-item bg-light">Improve our website and personalize your experience.</li>
                </ul>
            </section>

            <!-- Data Security -->
            <section class="mb-4">
                <h4 class="text-secondary fw-bold mb-3">
                    <i class="fas fa-lock me-2 text-primary"></i>Your Data Security
                </h4>
                <p class="text-dark">
                    Your information is encrypted and protected. We do not share or sell your data without consent.
                </p>
            </section>

            <!-- Your Rights -->
            <section class="mb-4">
                <h4 class="text-secondary fw-bold mb-3">
                    <i class="fas fa-balance-scale me-2 text-primary"></i>Your Rights
                </h4>
                <p class="text-dark">You have the right to:</p>
                <ul class="list-group list-group-flush mb-3">
                    <li class="list-group-item bg-light">Access your data and request changes or deletions.</li>
                    <li class="list-group-item bg-light">Opt out of promotional communications anytime.</li>
                </ul>
            </section>

            <!-- Contact Us -->
            <section class="mb-4">
                <h4 class="text-secondary fw-bold mb-3">
                    <i class="fas fa-envelope me-2 text-primary"></i>Contact Us
                </h4>
                <p class="text-dark">
                    For questions or concerns, contact us:
                </p>
                <p class="text-primary fw-bold">
                    <a href="mailto:support@barbakidsshop.com" class="text-decoration-none">support@barbakidsshop.com</a>
                </p>
            </section>
        </div>
    </div>
</div>
