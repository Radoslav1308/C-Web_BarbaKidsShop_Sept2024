@{
    ViewData["Title"] = "About Us - BarbaKidsShop";
}

<link rel="stylesheet" href="~/css/AboutUsStyleSheet.css" asp-append-version="true" />
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/animate.css/4.1.1/animate.min.css" />

<!-- Hero Section -->
<div class="container-fluid bg-light py-5">
    <div class="row align-items-center">
        <div class="col-md-6 text-center text-md-start">
            <h1 class="display-3 fw-bold text-primary">About BarbaKidsShop</h1>
            <p class="lead text-secondary mt-3">
                Discover the story behind BarbaKidsShop, our mission, and our dedication to providing top-quality products for your little ones.
            </p>
        </div>
        <div class="col-md-6 text-center">
            <img src="~/img/Team.jpg" alt="Team Image" class="img-fluid rounded shadow" />
        </div>
    </div>
</div>

<!-- Our Mission Section -->
<div class="container py-5">
    <h2 class="text-center mb-4 fw-bold text-secondary">Our Mission</h2>
    <p class="text-center text-muted">
        At BarbaKidsShop, we believe that every child deserves the best. Our mission is to bring parents quality products that help foster creativity, joy, and comfort in their children’s lives. We are committed to sourcing the best clothing, toys, and essentials for the next generation.
    </p>
</div>

<!-- Team Section -->
<div class="container py-5">
    <h2 class="text-center mb-4 fw-bold text-secondary">Meet the Team</h2>
    <div class="row text-center">
        <div class="col-md-4">
            <div class="card p-4 border-0 shadow rounded team-card animate__animated animate__fadeIn animate__delay-1s">
                <img src="~/img/Zornitsa.jpg" alt="Team Member" class="img-fluid rounded-circle mb-3 team-img animate__animated animate__zoomIn animate__delay-2s" />
                <h5 class="fw-bold">Zornitsa Tsvetkova</h5>
                <p class="text-muted">CEO & Founder</p>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card p-4 border-0 shadow rounded team-card animate__animated animate__fadeIn animate__delay-1s">
                <img src="~/img/Petko2.jpg" alt="Team Member" class="img-fluid rounded-circle mb-3 team-img animate__animated animate__zoomIn animate__delay-2s" />
                <h5 class="fw-bold">Petko Tsvetkov</h5>
                <p class="text-muted">Head of Product Development</p>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card p-4 border-0 shadow rounded team-card animate__animated animate__fadeIn animate__delay-1s">
                <img src="~/img/Radoslav.jpg" alt="Team Member" class="img-fluid rounded-circle mb-3 team-img animate__animated animate__zoomIn animate__delay-2s" />
                <h5 class="fw-bold">Radoslav Tsvetkov</h5>
                <p class="text-muted">Customer Support Manager</p>
            </div>
        </div>
    </div>
</div>

<!-- Why Choose Us Section -->
<div class="container mt-5">
    <h2 class="text-center mb-4 fw-bold text-secondary">Why Choose Us?</h2>
    <div class="row text-center">
        <div class="col-md-4">
            <div class="card p-4 border-0 shadow rounded">
                <i class="bi bi-bag-check display-4 text-primary mb-3"></i>
                <h5 class="fw-bold">Quality Products</h5>
                <p class="text-muted">We ensure only the best for you, with top-tier products across all categories.</p>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card p-4 border-0 shadow rounded">
                <i class="bi bi-truck display-4 text-success mb-3"></i>
                <h5 class="fw-bold">Fast Delivery</h5>
                <p class="text-muted">Experience swift and reliable delivery at your doorstep.</p>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card p-4 border-0 shadow rounded">
                <i class="bi bi-heart display-4 text-danger mb-3"></i>
                <h5 class="fw-bold">Customer Care</h5>
                <p class="text-muted">Our support team is here to assist you with any inquiries.</p>
            </div>
        </div>
    </div>
</div>

<!-- Join Us Section -->
<div class="container-fluid bg-dark text-white py-5">
    <div class="container text-center">
        <h5>Join Us On Our Journey to Make Parenting a Joyful Experience</h5>
        <p class="lead">Stay connected for exclusive updates and offers.</p>
        <a href="/Product/Index" class="btn btn-warning">Shop Now</a>
    </div>
</div>
