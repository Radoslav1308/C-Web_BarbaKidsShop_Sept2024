@{
    ViewData["Title"] = "About Us - BarbaKidsShop";
}

<link rel="stylesheet" href="~/css/AboutUsStyleSheet.css" asp-append-version="true" />
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/animate.css/4.1.1/animate.min.css" />

<!-- Hero Section -->
<div class="container-fluid bg-light py-5">
    <div class="row align-items-center">
        <div class="col-md-6 text-center text-md-start">
            <h1 class="display-3 fw-bold text-primary">About BarbaKidsShop</h1>
            <p class="lead text-secondary mt-3">
                Discover the story behind BarbaKidsShop, our mission, and our dedication to providing top-quality products for your little ones.
            </p>
        </div>
        <div class="col-md-6 text-center">
            <img src="https://via.placeholder.com/600x400" alt="Team Image" class="img-fluid rounded shadow" />
        </div>
    </div>
</div>

<!-- Our Mission Section -->
<div class="container py-5">
    <h2 class="text-center mb-4 fw-bold text-secondary">Our Mission</h2>
    <p class="text-center text-muted">
        At BarbaKidsShop, we believe that every child deserves the best. Our mission is to bring parents quality products that help foster creativity, joy, and comfort in their children’s lives. We are committed to sourcing the best clothing, toys, and essentials for the next generation.
    </p>
</div>

<!-- Team Section -->
<div class="container py-5">
    <h2 class="text-center mb-4 fw-bold text-secondary">Meet the Team</h2>
    <div class="row text-center">
        <div class="col-md-4">
            <div class="card p-4 border-0 shadow rounded team-card animate__animated animate__fadeIn animate__delay-1s">
                <img src="https://via.placeholder.com/150" alt="Team Member" class="img-fluid rounded-circle mb-3 team-img animate__animated animate__zoomIn animate__delay-2s" />
                <h5 class="fw-bold">Zornitsa Tsvetkova</h5>
                <p class="text-muted">CEO & Founder</p>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card p-4 border-0 shadow rounded team-card animate__animated animate__fadeIn animate__delay-1s">
                <img src="https://via.placeholder.com/150" alt="Team Member" class="img-fluid rounded-circle mb-3 team-img animate__animated animate__zoomIn animate__delay-2s" />
                <h5 class="fw-bold">Petko Tsvetkov</h5>
                <p class="text-muted">Head of Product Development</p>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card p-4 border-0 shadow rounded team-card animate__animated animate__fadeIn animate__delay-1s">
                <img src="https://via.placeholder.com/150" alt="Team Member" class="img-fluid rounded-circle mb-3 team-img animate__animated animate__zoomIn animate__delay-2s" />
                <h5 class="fw-bold">Radoslav Tsvetkov</h5>
                <p class="text-muted">Customer Support Manager</p>
            </div>
        </div>
    </div>
</div>

<!-- Why Choose BarbaKidsShop Section -->
<div class="container py-5">
    <h2 class="text-center mb-4 fw-bold text-secondary">Why Choose BarbaKidsShop?</h2>
    <p class="text-center text-muted mb-5">We are dedicated to offering the best for your little ones, combining quality, care, and customer satisfaction in everything we do.</p>
    <div class="row text-center">
        <div class="col-md-4 mb-4">
            <div class="card border-0 shadow-lg rounded hover-zoom">
                <img src="https://via.placeholder.com/400x300" alt="Quality Products" class="card-img-top rounded">
                <div class="card-body">
                    <h5 class="fw-bold">Top-Quality Products</h5>
                    <p class="text-muted">We prioritize the highest quality for all our products, ensuring safety and durability for your little ones.</p>
                </div>
            </div>
        </div>
        <div class="col-md-4 mb-4">
            <div class="card border-0 shadow-lg rounded hover-zoom">
                <img src="https://via.placeholder.com/400x300" alt="Fast Delivery" class="card-img-top rounded">
                <div class="card-body">
                    <h5 class="fw-bold">Fast & Reliable Delivery</h5>
                    <p class="text-muted">We ensure timely deliveries right to your doorstep, so you don’t have to wait for your essentials.</p>
                </div>
            </div>
        </div>
        <div class="col-md-4 mb-4">
            <div class="card border-0 shadow-lg rounded hover-zoom">
                <img src="https://via.placeholder.com/400x300" alt="Customer Satisfaction" class="card-img-top rounded">
                <div class="card-body">
                    <h5 class="fw-bold">Dedicated Customer Support</h5>
                    <p class="text-muted">Our customer service team is always available to ensure that your experience is smooth and delightful.</p>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Join Us Section -->
<div class="container-fluid bg-dark text-white py-5">
    <div class="container text-center">
        <h5>Join Us On Our Journey to Make Parenting a Joyful Experience</h5>
        <p class="lead">Stay connected for exclusive updates and offers.</p>
        <a href="/Product/Index" class="btn btn-warning">Shop Now</a>
    </div>
</div>
