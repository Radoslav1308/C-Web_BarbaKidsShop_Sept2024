@{
    ViewData["Title"] = "Welcome to BarbaKidsShop!";
}

<!-- Hero Section -->
<div class="container-fluid bg-light py-5">
    <div class="row align-items-center">
        <div class="col-md-6 text-center text-md-start">
            <h1 class="display-3 fw-bold text-primary">Welcome to BarbaKidsShop!</h1>
            <p class="lead text-secondary mt-3">
                Your one-stop shop for kids' clothing, toys, and essentials. Quality and joy delivered to your doorstep!
            </p>
            <a href="/Product/Index" class="btn btn-primary btn-lg me-3 mb-3 mb-md-0">Shop Now</a>
            <a href="/Home/About" class="btn btn-outline-secondary btn-lg mb-3 mb-md-0">Learn More</a>
        </div>
        <div class="col-md-6 text-center mt-4 mt-md-0">
            <img src="~/img/Main-img.jpg" alt="Kids playing with toys" class="img-fluid rounded shadow" />
        </div>
    </div>
</div>

<!-- Categories Section -->
<div class="container py-5">
    <h2 class="text-center mb-4 fw-bold text-secondary">Explore Our Categories</h2>
    <div class="row text-center">
        <div class="col-md-4 mb-4">
            <div class="card border-0 shadow rounded">
                <img src="~/img/Clothes.jpg" alt="Kids Clothing" class="card-img-top" />
                <div class="card-body">
                    <h5 class="fw-bold">Clothing</h5>
                    <p class="text-muted">Trendy, comfy, and affordable outfits for your little ones.</p>
                </div>
            </div>
        </div>
        <div class="col-md-4 mb-4">
            <div class="card border-0 shadow rounded">
                <img src="~/img/Toys.jpg" alt="Kids Toys" class="card-img-top" />
                <div class="card-body">
                    <h5 class="fw-bold">Toys</h5>
                    <p class="text-muted">From educational to fun – toys for every age and stage.</p>
                </div>
            </div>
        </div>
        <div class="col-md-4 mb-4">
            <div class="card border-0 shadow rounded">
                <img src="~/img/" alt="Essentials" class="card-img-top" />
                <div class="card-body">
                    <h5 class="fw-bold">Essentials</h5>
                    <p class="text-muted">Everything you need to make parenting easier and fun.</p>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Best Sellers Section -->
<div class="container-fluid bg-primary text-white py-5">
    <div class="container">
        <h2 class="text-center fw-bold">Our Best Sellers</h2>
        <p class="text-center">Top picks loved by parents and kids alike!</p>
        <div class="row text-center">
            <div class="col-md-3 mb-4">
                <div class="card bg-light border-0 shadow-sm">
                    <img src="~/img/Car.jpg" alt="Product 1" class="card-img-top" />
                    <div class="card-body">
                        <h6 class="fw-bold text-primary">Toy Car</h6>
                        <p class="text-muted">14.99лв.</p>
                    </div>
                </div>
            </div>
            <div class="col-md-3 mb-4">
                <div class="card bg-light border-0 shadow-sm">
                    <img src="~/img/Dress.jpg" alt="Product 2" class="card-img-top" />
                    <div class="card-body">
                        <h6 class="fw-bold text-primary">Girl's Dress</h6>
                        <p class="text-muted">29.99лв.</p>
                    </div>
                </div>
            </div>
            <div class="col-md-3 mb-4">
                <div class="card bg-light border-0 shadow-sm">
                    <img src="~/img/TeddyBear.jpg" alt="Product 3" class="card-img-top" />
                    <div class="card-body">
                        <h6 class="fw-bold text-primary">Stuffed Teddy</h6>
                        <p class="text-muted">19.99лв.</p>
                    </div>
                </div>
            </div>
            <div class="col-md-3 mb-4">
                <div class="card bg-light border-0 shadow-sm">
                    <img src="" alt="Product 4" class="card-img-top" />
                    <div class="card-body">
                        <h6 class="fw-bold text-primary">Ball</h6>
                        <p class="text-muted">25.99лв.</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


<!-- Customer Reviews Section -->
<div class="container py-5">
    <h2 class="text-center mb-4 fw-bold text-secondary">What Our Customers Say</h2>
    <div class="row text-center">
        <div class="col-md-4 mb-4">
            <blockquote class="blockquote">
                <p class="fst-italic">"Amazing quality and fast delivery! My kids love the toys!"</p>
                <footer class="blockquote-footer">Maria T.</footer>
            </blockquote>
        </div>
        <div class="col-md-4 mb-4">
            <blockquote class="blockquote">
                <p class="fst-italic">"Fantastic customer service. The clothing fits perfectly."</p>
                <footer class="blockquote-footer">James R.</footer>
            </blockquote>
        </div>
        <div class="col-md-4 mb-4">
            <blockquote class="blockquote">
                <p class="fst-italic">"Affordable prices and great variety. Highly recommend!"</p>
                <footer class="blockquote-footer">Anna K.</footer>
            </blockquote>
        </div>
    </div>
</div>

<!-- Newsletter Section -->
<div class="container-fluid bg-warning text-white py-5">
    <div class="container text-center">
        <h2 class="fw-bold">Stay Connected!</h2>
        <p>Subscribe for exclusive discounts and product updates.</p>
        <form class="row justify-content-center">
            <div class="col-md-6">
                <input type="email" class="form-control mb-2" placeholder="Enter your email address" required />
            </div>
            <div class="col-md-2">
                <button type="submit" class="btn btn-dark w-100">Subscribe</button>
            </div>
        </form>
    </div>
</div>
