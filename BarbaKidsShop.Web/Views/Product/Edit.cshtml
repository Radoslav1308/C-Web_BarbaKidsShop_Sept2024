@using BarbaKidsShop.Web.ViewModels

@model ProductEditViewModel

@{
    ViewData["Title"] = "Edit Product";
}

<link rel="stylesheet" href="~/css/AddProductStyleSheet.css" asp-append-version="true" />

<div class="d-flex justify-content-between align-items-center mb-4 mt-3">
    <h2 class="text-primary">@ViewData["Title"]</h2>
    <a asp-action="Index" class="btn btn-secondary back-to-list-btn">Back to List</a>
</div>
<hr />

<div class="row">
    <div class="col-md-8 offset-md-2">
        <form asp-action="Edit" method="post" enctype="multipart/form-data">
            @Html.AntiForgeryToken()

            <div class="row">
                <div class="col-sm-6 mb-3">
                    <label asp-for="ProductName" class="form-label">Product Name</label>
                    <input asp-for="ProductName" class="form-control custom-input" aria-required="true" placeholder="Enter product name" />
                    <span asp-validation-for="ProductName" class="text-danger"></span>
                </div>

                <div class="col-sm-6 mb-3">
                    <label asp-for="Price" class="form-label">Price</label>
                    <div class="input-group">
                        <span class="input-group-text">Лв</span>
                        <input asp-for="Price" class="form-control custom-input" type="number" step="0.01" min="0" aria-required="true" placeholder="Enter product price" />
                    </div>
                    <span asp-validation-for="Price" class="text-danger"></span>
                </div>
            </div>

            <div class="mb-3">
                <label asp-for="Description" class="form-label">Description</label>
                <textarea asp-for="Description" class="form-control custom-input" rows="4" aria-required="true" placeholder="Enter product description"></textarea>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="ImageUrl" class="form-label">Image URL</label>
                <input asp-for="ImageUrl" class="form-control custom-input" placeholder="Enter image URL (optional)" />
                <span asp-validation-for="ImageUrl" class="text-danger"></span>
            </div>

            <div class="row">
                <div class="col-sm-6 mb-3">
                    <label asp-for="CategoryId" class="form-label">Category</label>
                    <select asp-for="CategoryId" class="form-control custom-input" aria-required="true">
                        <option value="">Select Category...</option>
                        @foreach (var category in Model.Categories)
                        {
                            <option value="@category.CategoryId">
                                @category.Name
                            </option>
                        }
                    </select>
                    <span asp-validation-for="CategoryId" class="text-danger"></span>
                </div>
            </div>

            <div class="mb-3">
                <input class="btn btn-warning w-100 py-2 fw-bold rounded save-btn" type="submit" value="Save Changes" />
            </div>
        </form>
    </div>
</div>