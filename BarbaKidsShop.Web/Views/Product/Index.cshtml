@using BarbaKidsShop.Web.ViewModels

@model IEnumerable<ProductIndexViewModel>

@{
    ViewData["Title"] = "Products - Ordered by Price";
}

<div class="d-flex justify-content-between align-items-center mb-3" style="margin-top: 20px;">
    <h2>@ViewData["Title"]</h2>
</div>

<hr />

<div class="row">
    @foreach (var product in Model)
    {
        <div class="col-sm-12 col-md-6 col-lg-4 mb-4">
            <div class="card">
                <img src="@product.ImageUrl" alt="@product.ProductName" class="card-img-top" />
                <div class="card-body">
                    <h5 class="card-title">@product.ProductName</h5>
                    <p class="card-text">Price: €@product.Price</p>
                    <a href="@Url.Action("Details", "Product", new { id = product.Id })" class="btn btn-primary">View Details</a>
                </div>
            </div>
        </div>
    }
</div>