@using BarbaKidsShop.Web.ViewModels

@model IEnumerable<ProductIndexViewModel>

@{
    ViewData["Title"] = "Products List";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h2>@ViewData["Title"]</h2>
        @if (User?.Identity?.IsAuthenticated == true)
        {
            <a asp-controller="Product" asp-action="Add" class="btn btn-primary"><i class="fas fa-plus"></i> Add Product</a>
        }
    </div>
    <hr />

    <div class="row text-center">
        @foreach (var product in Model)
        {
            <div class="col-md-3 mb-4">
                <div class="card h-100" style="width: 100%;">
                    @if (!string.IsNullOrEmpty(product.ImageUrl))
                    {
                        <img src="@product.ImageUrl" class="card-img-top" style="max-height: 150px; object-fit: contain;" alt="@product.ProductName">
                    }
                    else
                    {
                        <img src="~/img/no-image-available-02.jpg" class="card-img-top" style="max-height: 150px; object-fit: contain;" alt="No Image Available">
                    }

                    <div class="card-body d-flex flex-column">
                        <h5 class="card-title">@product.ProductName</h5>
                        <p class="card-text">Price: @product.Price.ToString("C", System.Globalization.CultureInfo.CreateSpecificCulture("bg-BG"))</p>
                        <div class="d-flex justify-content-between mt-auto">
                            @if (User?.Identity?.IsAuthenticated == true) // Make it work when user is Not Authenticated
                            {
                                <a asp-controller="Product" asp-action="Edit" asp-route-id="@product.Id" class="btn btn-warning me-2 w-50">Edit</a>
                                <a asp-controller="Product" asp-action="Delete" asp-route-id="@product.Id" class="btn btn-danger w-50">Delete</a>
                            }
                            else
                            {
                                <a asp-controller="Product" asp-action="Details" asp-route-id="@product.Id" class="btn btn-info me-2 w-50">Details</a>
                                @* <form asp-controller="Product" asp-action="AddToCart" method="post" class="w-50">
                                    <input type="hidden" name="id" value="@product.Id" />
                                    <button type="submit" class="btn btn-success w-50">Buy</button>
                                </form> *@
                                <a asp-controller="Product" asp-action="AddToCart" asp-route-id="@product.Id" class="btn btn-success w-50">Buy</a>
                            }
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</div>