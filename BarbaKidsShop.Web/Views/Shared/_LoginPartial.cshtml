@using BarbaKidsShop.Data.Models
@using Microsoft.AspNetCore.Identity
@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager

<ul class="navbar-nav">
@if (SignInManager.IsSignedIn(User))
{
    <li class="nav-item">
        <a class="nav-link text-primary fw-bold" asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage">
            Hello, @User.Identity?.Name!
        </a>
    </li>
    <li class="nav-item">
        <form class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
            <button type="submit" class="btn btn-outline-danger rounded-pill px-4 py-1 fw-bold">Logout</button>
        </form>
    </li>
}
else
{
    <li class="nav-item me-2">
        <a class="nav-link btn btn-outline-primary rounded-pill px-4 py-1 fw-bold" asp-area="Identity" asp-page="/Account/Register">Register</a>
    </li>
    <li class="nav-item">
        <a class="nav-link btn btn-outline-success rounded-pill px-4 py-1 fw-bold" asp-area="Identity" asp-page="/Account/Login">Login</a>
    </li>
}
</ul>
