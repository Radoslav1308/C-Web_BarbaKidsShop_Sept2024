@using BarbaKidsShop.Data.Models
@using Microsoft.AspNetCore.Identity

@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - BarbaKidsShop.Web</title>

    <link rel="icon" href="~/img/favicon.ico" type="image/x-icon">
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css" rel="stylesheet" />
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css" rel="stylesheet">
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/BarbaKidsShop.Web.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-lg navbar-light bg-light shadow-sm py-3">
            <div class="container-fluid">
                <a class="navbar-brand fw-bold text-primary" asp-area="" asp-controller="Home" asp-action="Index">
                    <img src="~/img/HomeIcon.jpg" alt="BarbaKidsShop" style="height: 40px; margin-right: 10px;">BarbaKidsShop
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNavDropdown" aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarNavDropdown">
                    <ul class="navbar-nav me-auto">
                        <!-- Privacy Link -->
                        <li class="nav-item">
                            <a class="nav-link text-dark fw-semibold hover-link" asp-area="" asp-controller="Home" asp-action="Privacy">
                                <i class="fas fa-lock"></i> Privacy
                            </a>
                        </li>
                        <!-- About link -->
                        <li class="nav-item">
                            <a class="nav-link text-dark fw-semibold hover-link" asp-area="" asp-controller="Home" asp-action="About">
                                <i class="fas fa-info"></i> About
                            </a>
                        </li>
                        <!-- Products Dropdown -->
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle text-dark fw-semibold hover-link" href="#" id="productsDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                <i class="fas fa-box"></i> Products
                            </a>
                            <ul class="dropdown-menu border-0 shadow-lg" aria-labelledby="productsDropdown">
                                <li>
                                    <a class="dropdown-item text-dark hover-item" asp-controller="Product" asp-action="Index">
                                        <i class="fas fa-list"></i> Product List
                                    </a>
                                </li>
                                @if (User.IsInRole("Admin"))
                                {
                                    <li><a class="dropdown-item" asp-controller="Product" asp-action="Add">Add Product</a></li>
                                }
                            </ul>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark fw-semibold hover-link" asp-area="" asp-controller="Cart" asp-action="Index">
                                <i class="bi bi-cart-fill"></i> Cart
                            </a>
                        </li>
                        <li class="nav-item">
                            <form class="d-flex" asp-controller="Search" asp-action="Search" method="get">
                                <input class="form-control me-2"
                                       type="search"
                                       name="productName"
                                       placeholder="Search for product"
                                       aria-label="Search for product"
                                       required>
                                <button class="btn btn-outline-dark fw-semibold" type="submit">
                                    <i class="bi bi-search"></i>
                                </button>
                            </form>
                        </li>
                    </ul>

                    <partial name="_LoginPartial" />
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="bg-light text-muted py-4 mt-5 border-top">
        <div class="container d-flex flex-column flex-md-row justify-content-between align-items-center">
            <div class="mb-3 mb-md-0">
                <p class="mb-0">&copy; 2024 BarbaKidsShop. All rights reserved.</p>
                <a asp-area="" asp-controller="Home" asp-action="Privacy" class="text-decoration-none text-muted">
                    Privacy Policy
                </a>
            </div>
            <div class="social-icons d-flex justify-content-center">
                <a href="https://www.facebook.com/profile.php?id=100006979658761&locale=bg_BG" class="text-primary me-3" aria-label="Facebook">
                    <i class="bi bi-facebook fs-3"></i>
                </a>
                <a href="https://www.instagram.com/zprcvetkovi01/" class="text-danger me-3" aria-label="Instagram">
                    <i class="bi bi-instagram fs-3"></i>
                </a>
            </div>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
