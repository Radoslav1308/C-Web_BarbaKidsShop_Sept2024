@using BarbaKidsShop.Web.ViewModels

@model ShippingDetailViewModel

<link rel="stylesheet" href="~/css/ShippingDetailStyleSheet.css" asp-append-version="true" />

<div class="container py-5">
    <div class="card shadow-lg border-0 rounded">
        <div class="card-header bg-primary text-white text-center">
            <h2 class="mb-0">Enter Shipping Details</h2>
        </div>
        <div class="card-body bg-light">
            <form asp-action="ShippingDetails" method="post" class="needs-validation" novalidate>
                <div class="form-group mb-4">
                    <label asp-for="FullName" class="form-label fw-bold">Full Name</label>
                    <input asp-for="FullName" class="form-control border-primary shadow-sm" />
                    <span asp-validation-for="FullName" class="text-danger"></span>
                </div>
                <div class="form-group mb-4">
                    <label asp-for="Address" class="form-label fw-bold">Address</label>
                    <input asp-for="Address" class="form-control border-primary shadow-sm" />
                    <span asp-validation-for="Address" class="text-danger"></span>
                </div>
                <div class="form-group mb-4">
                    <label asp-for="City" class="form-label fw-bold">City</label>
                    <input asp-for="City" class="form-control border-primary shadow-sm" />
                    <span asp-validation-for="City" class="text-danger"></span>
                </div>
                <div class="form-group mb-4">
                    <label asp-for="PostalCode" class="form-label fw-bold">Postal Code</label>
                    <input asp-for="PostalCode" class="form-control border-primary shadow-sm" />
                    <span asp-validation-for="PostalCode" class="text-danger"></span>
                </div>
                <div class="form-group mb-4">
                    <label asp-for="Country" class="form-label fw-bold">Country</label>
                    <input asp-for="Country" class="form-control border-primary shadow-sm" />
                    <span asp-validation-for="Country" class="text-danger"></span>
                </div>

                <div class="d-flex justify-content-between align-items-center">
                    <a asp-action="Index" asp-controller="Cart" class="btn btn-secondary px-4 py-2 shadow-sm btn-hover">Back to Cart</a>
                </div>
            </form>
            <form asp-action="SaveAndCheckout" method="post" class="d-flex justify-content-end">
                <button type="submit" class="btn btn-success px-4 py-2 shadow-sm btn-hover">
                    Save Shipping Details & Finish Order
                </button>
            </form>
        </div>
    </div>
</div>
