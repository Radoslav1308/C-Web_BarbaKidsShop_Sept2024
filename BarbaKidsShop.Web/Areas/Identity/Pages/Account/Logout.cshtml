@page
@model LogoutModel
@{
    ViewData["Title"] = "Log out";
}

<div class="container py-5">
    <div class="row justify-content-center align-items-center" style="min-height: 70vh;">
        <div class="col-lg-5 col-md-7">
            <div class="card shadow-lg border-0">
                <!-- Card Header -->
                <div class="card-header bg-danger text-white text-center py-4">
                    <h2 class="fw-bold mb-1">@ViewData["Title"]</h2>
                </div>
                <!-- Card Body -->
                <div class="card-body p-5">
                    @{
                        if (User.Identity?.IsAuthenticated ?? false)
                        {
                            <form class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Page("/", new { area = "" })" method="post">
                                <button type="submit" class="w-100 btn btn-danger btn-lg rounded-pill shadow-sm">
                                    Log Out
                                </button>
                            </form>
                        }
                        else
                        {
                            <p class="text-center text-muted">You have successfully logged out of the application.</p>
                            <div class="text-center mt-4">
                                <a href="/" class="btn btn-primary w-100 btn-lg rounded-pill shadow-sm">
                                    Return to Home Page
                                </a>
                            </div>
                        }
                    }
                </div>
            </div>
        </div>
    </div>
</div>