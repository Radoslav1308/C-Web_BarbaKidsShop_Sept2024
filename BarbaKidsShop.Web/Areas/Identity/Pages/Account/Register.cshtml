@page
@model RegisterModel
@{
    ViewData["Title"] = "Register";
}

<link rel="stylesheet" href="~/css/RegisterStyleSheet.css" asp-append-version="true" />

<div class="container py-5">
    <div class="row justify-content-center align-items-center" style="min-height: 70vh;">
        <!-- Registration Card -->
        <div class="col-lg-5 col-md-7">
            <div class="card shadow-lg border-0">
                <!-- Card Header -->
                <div class="card-header bg-success text-white text-center py-4">
                    <h2 class="fw-bold mb-1">@ViewData["Title"]</h2>
                    <p class="mb-0">Create a new account to get started</p>
                </div>
                <!-- Card Body -->
                <div class="card-body p-5">
                    <form id="registerForm" asp-route-returnUrl="@Model.ReturnUrl" method="post">
                        <div asp-validation-summary="ModelOnly" class="text-danger mb-3" role="alert"></div>

                        <!-- Email Field -->
                        <div class="form-floating mb-4">
                            <input asp-for="Input.Email" class="form-control rounded-pill shadow-sm" autocomplete="username" placeholder="Email Address" required />
                            <label asp-for="Input.Email">Email Address</label>
                            <span asp-validation-for="Input.Email" class="text-danger"></span>
                        </div>

                        <!-- Password Field -->
                        <div class="form-floating mb-4">
                            <input asp-for="Input.Password" class="form-control rounded-pill shadow-sm" type="password" autocomplete="new-password" placeholder="Password" required />
                            <label asp-for="Input.Password">Password</label>
                            <span asp-validation-for="Input.Password" class="text-danger"></span>
                        </div>

                        <!-- Confirm Password Field -->
                        <div class="form-floating mb-4">
                            <input asp-for="Input.ConfirmPassword" class="form-control rounded-pill shadow-sm" type="password" autocomplete="new-password" placeholder="Confirm Password" required />
                            <label asp-for="Input.ConfirmPassword">Confirm Password</label>
                            <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
                        </div>

                        <!-- Register Button -->
                        <button id="registerSubmit" type="submit" class="btn btn-success w-100 btn-lg rounded-pill shadow-sm">
                            Register
                        </button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>